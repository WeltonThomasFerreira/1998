/* To learn more about Typescript configuration file: https://www.typescriptlang.org/docs/handbook/tsconfig-json.html. */
/* To learn more about Angular compiler options: https://angular.dev/reference/configs/angular-compiler-options. */
{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./out-tsc/app",
    "types": ["node"], // Mantido do seu arquivo atual
    "baseUrl": "./", // Adicionado para resolver os 'paths'
    "paths": {
      "@app/*": [
        "src/app/*"
      ],
      "@core/*": [
        "src/app/core/*"
      ],
      "@shared/*": [
        "src/app/shared/*"
      ],
      "@features/*": [
        "src/app/features/*"
      ],
      "@styles/*": [
        "src/app/styles/*" // Caminho atualizado para a nova localização
      ]
    }
  },
  "include": ["src/**/*.ts"], // Mantido do seu arquivo atual
  "exclude": ["src/**/*.spec.ts"] // Mantido do seu arquivo atual
}
